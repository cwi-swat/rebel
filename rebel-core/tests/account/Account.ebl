module account.Account

import account.AccountLib

abstract specification Account {
	fields {
		accountNumber: IBAN @key
		balance: Money
	}
	
	events {
		block[]
		unblock[]
	  	close[]
	  	destroy[]
	}
	
	lifeCycle {
		initial init
		opened 	-> blocked: block
				-> closed: close
		blocked	-> opened: unblock
				-> closed: close
		closed	-> destroyed: destroy
		final destroyed
	}
}
