module booking.sepa.dd.CreditBooking

import booking.sepa.dd.CreditBookingLib

// BookCreditorAccount Booking is booked from a single WashAccount.
specification CreditBooking {
	fields {
		id: Integer @key
		creditor: IBAN
		settlementDate: Date
		globalCredit: Money
	}
	
	events {
		create[]
		book[]
		fail[]
		revoke[]
	}
	
	lifeCycle {
		initial init	-> initialized: create
		initialized		-> successful: book
						-> failed: fail
						-> revoked: revoke
		final revoked
		final successful
		final failed
	}
}